[gd_resource type="Shader" format=2]

[resource]
code = "shader_type canvas_item;

uniform vec2 otherPlayerCenter1;
uniform bool otherPlayerAlive1;

uniform vec2 otherPlayerCenter2;
uniform bool otherPlayerAlive2;

varying smooth vec2 local_position;

void vertex(){
    local_position = VERTEX;
}

void fragment(){
	if ((otherPlayerAlive1 && abs(length(local_position)) >= abs(length(local_position - otherPlayerCenter1))) ||
		(otherPlayerAlive2 && abs(length(local_position)) >= abs(length(local_position - otherPlayerCenter2))) )
	 {
		discard;
	}
}"
